/* pages/login/login.wxss */

.input-login {
  box-sizing: border-box;
  border: 2rpx solid #ddd;
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 20rpx;
}

.btn-login {
  background-color: #333;
  border-radius: 0;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #fff;
}

.btn-login-hover {
  background-color: #5e81bf;
}